<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--
	Clean Textures changes the base game soil to a green color.
	This makes Gulden biome look completely different. 
	Changing back to base game soil to fix.
	
	Mod extension is for natures pretty sweet so it gets soil changing effects
	-->
	<TerrainDef ParentName="NaturalTerrainBase">
		<defName>Gulden_Soil</defName>
		<label>soil</label>
		<texturePath>Terrain/GuldenGrass</texturePath>
		<pollutedTexturePath>Terrain/GuldenGrass</pollutedTexturePath>
		<edgeType>FadeRough</edgeType>
		<categoryType>Soil</categoryType>
		<renderPrecedence>340</renderPrecedence>
		<pathCost>2</pathCost>
		<statBases>
			<Beauty>-3</Beauty>
			<BeautyOutdoors>0</BeautyOutdoors>
			<Cleanliness>-1</Cleanliness>
		</statBases>
		<scatterType>Rocky</scatterType>
		<affordances>
			<li>Light</li>
			<li>Medium</li>
			<li>Heavy</li>
			<li>GrowSoil</li>
			<li>Diggable</li>
		</affordances>
		<generatedFilth>Filth_Dirt</generatedFilth>
		<fertility>1.0</fertility>
		<takeFootprints>True</takeFootprints>
		<tools>
			<li>
				<label>dirt</label>
				<capacities>
					<li>KickMaterialInEyes</li>
				</capacities>
				<hediff>DirtInEyes</hediff>
				<cooldownTime>1.5</cooldownTime>
			</li>
		</tools>
		<tags>
			<li>Soil</li>
		</tags>
		<modExtensions>
			<li Class="TKKN_NPS.TerrainWeatherReactions" MayRequire="mlie.naturesprettysweet">
				<tideTerrain />
				<floodTerrain />
				<wetTerrain>TKKN_SoilWet</wetTerrain>
				<freezeTerrain />
				<freezeAt />
				<wetAt>0</wetAt>
				<isSalty>False</isSalty>
				<holdFrost>True</holdFrost>
				<dryTerrain />
			</li>
		</modExtensions>
	</TerrainDef>


</Defs>